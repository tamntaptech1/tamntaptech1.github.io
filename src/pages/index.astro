---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const basePath = import.meta.env.PUBLIC_BASE_PATH || '/tamntaptech1.github.io';

// Get recent blog posts (excluding drafts)
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<BaseLayout>
  <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-16">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <div class="mb-6">
        <div class="relative inline-block">
          <div class="w-32 h-32 rounded-full overflow-hidden ring-4 ring-gray-200 dark:ring-gray-700 mx-auto">
            <img
              src={`${basePath}/images/avatar.jpeg`}
              alt="Tam Nguyen"
              class="w-full h-full object-cover"
              width="128"
              height="128"
            />
          </div>
        </div>
      </div>

      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4">
        Hi, I'm Tam Nguyen
      </h1>

      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
        Software Developer passionate about building beautiful, functional web applications.
        Welcome to my personal blog where I share my thoughts, projects, and experiences.
      </p>

      <div class="flex flex-wrap justify-center gap-4">
        <a
          href={`${basePath}/blog`}
          class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
        >
          Read My Blog
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Recent Posts Section -->
    {recentPosts.length > 0 && (
      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
          Recent Posts
        </h2>
        <div class="space-y-6">
          {recentPosts.map((post) => (
            <article class="group">
              <a
                href={`${basePath}/blog/${post.slug}`}
                class="block p-6 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-600 hover:shadow-lg transition-all"
              >
                <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-2">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                  {post.data.category && (
                    <>
                      <span>Â·</span>
                      <span class="text-primary-600 dark:text-primary-400">
                        {post.data.category}
                      </span>
                    </>
                  )}
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                  {post.data.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 line-clamp-2">
                  {post.data.description}
                </p>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-3">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="text-xs text-gray-500 dark:text-gray-400">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}
              </a>
            </article>
          ))}
        </div>
        <div class="mt-8 text-center">
          <a
            href={`${basePath}/blog`}
            class="inline-flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors font-medium"
          >
            View all posts
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
        </div>
      </section>
    )}
  </div>
</BaseLayout>
